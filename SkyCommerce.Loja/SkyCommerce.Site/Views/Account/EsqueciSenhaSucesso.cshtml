@{
    ViewData["Title"] = "EsqueciSenhaSucesso";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container main-container headerOffset">
    <div class="row">
        <div class="breadcrumbDiv col-lg-12">
            <ul class="breadcrumb">
                <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li> Esqueci minha senha</li>
                <li class="active"> Sucesso</li>
            </ul>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-9 col-md-9 col-sm-7">
            <h1 class="section-title-inner"><span> <i class="fa fa-unlock-alt"> </i> Esqueceu a senha? </span></h1>

            <div class="row userInfo">
                <div class="col-xs-12 col-sm-12">
                    <p>
                        O e-mail foi enviado com sucesso!
                    </p>

                    @if (TempData["UrlReset"] == null)
                    {

                        <div class="alert alert-danger">
                            <strong>Erro</strong>
                            Como se trata de um demo o erro está sendo exibido. Houve um erro na geração do link. Provavelmente e-mail inválido.
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-success">
                            <strong>Sucesso</strong>
                            Como se trata de um demo. O link gerado é esse: <br /><a href="@TempData["UrlReset"]">@TempData["UrlReset"]</a>
                        </div>
                    }

                </div>
            </div>
            <!--/row end-->

        </div>
        <div class="col-lg-3 col-md-3 col-sm-5"></div>
    </div>
    <!--/row-->

    <div style="clear:both"></div>
</div>
<!-- /wrapper -->
