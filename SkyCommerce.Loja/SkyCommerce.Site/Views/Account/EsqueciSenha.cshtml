@model EsqueciSenhaViewModel
@{
    ViewData["Title"] = "EsqueciSenha";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container main-container headerOffset">
    <div class="row">
        <div class="breadcrumbDiv col-lg-12">
            <ul class="breadcrumb">
                <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li class="active"> Esqueci minha senha</li>
            </ul>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-9 col-md-9 col-sm-7">
            <h1 class="section-title-inner"><span> <i class="fa fa-unlock-alt"> </i> Esqueceu a senha? </span></h1>

            <div class="row userInfo">
                <div class="col-xs-12 col-sm-12">
                    <p>
                        Para resetar seu password, digite abaixo o endereço de e-mail utilizado para logar no site. Nós iremos te enviar um e-mail para resetar sua senha.
                    </p>

                    <form role="form" asp-action="EsqueciSenha" asp-controller="Account">
                        <div class="form-group">
                            <label for="exampleInputEmail1"> Informe seu e-mail </label>
                            <input asp-for="Email" type="email" class="form-control" id="exampleInputEmail1" placeholder="Email">
                        </div>
                        <button type="submit" class="btn   btn-primary">
                            <i class="fa fa-unlock"> </i> Recuperar senha
                        </button>

                        <br />
                        @await Html.PartialAsync("_ValidationSummary")
                    </form>
                    <div class="clear clearfix">
                        <ul class="pager">
                            <li class="previous pull-right"><a asp-action="Login" asp-controller="Account"> &larr; Voltar ao login </a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <!--/row end-->

        </div>
        <div class="col-lg-3 col-md-3 col-sm-5"></div>
    </div>
    <!--/row-->

    <div style="clear:both"></div>
</div>
<!-- /wrapper -->
